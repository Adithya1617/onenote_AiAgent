{
  "info": {
    "name": "OneNote AI Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "8c2a2a6f-2d3a-4a3a-8e1a-4bfc12e7a1a6"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Body has ok=true or message', function () { pm.expect(pm.response.text()).to.be.a('string'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Notebooks (triggers device auth on first run)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/notebooks", "host": ["{{baseUrl}}"], "path": ["notebooks"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response is array', function () { pm.expect(pm.response.json()).to.be.an('array'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Chat - Text",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "text", "value": "Summarize this: The mitochondria is the powerhouse of the cell.", "type": "text" },
            { "key": "mode", "value": "text", "type": "text" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/chat", "host": ["{{baseUrl}}"], "path": ["chat"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Has summary_md', function () { pm.expect(pm.response.json()).to.have.property('summary_md'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Chat - Image Upload",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": ["C:/path/to/sample-image.png"] },
            { "key": "mode", "value": "image", "type": "text" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/chat", "host": ["{{baseUrl}}"], "path": ["chat"] }
      }
    },
    {
      "name": "Chat - Audio Upload",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": ["C:/path/to/sample-audio.m4a"] },
            { "key": "mode", "value": "audio", "type": "text" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/chat", "host": ["{{baseUrl}}"], "path": ["chat"] }
      }
    },
    {
      "name": "Chat - Text to Specific Notebook/Section",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "text", "value": "Create a short summary of Newton's laws.", "type": "text" },
            { "key": "target_notebook", "value": "Personal", "type": "text" },
            { "key": "target_section", "value": "Tasks", "type": "text" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/chat", "host": ["{{baseUrl}}"], "path": ["chat"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000", "type": "string" }
  ]
}
